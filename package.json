{
  "name": "mushcode",
  "displayName": "MUSHCode",
  "description": "",
  "repository": "https://github.com/lcanady/mushcode",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:mushcode",
    "onCommand:extension.format",
    "onCommand:extension.postSelection"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "MUSHCode",
      "properties": {
        "game.dbref": {
          "type": "string",
          "default": "",
          "description": "The dbref of your API object."
        },
        "game.password": {
          "type": "string",
          "default": "",
          "description": "The Password for your RhostMUSH game."
        },
        "game.host": {
          "type": "string",
          "default": "",
          "description": "The Hostname for your RhostMUSH game."
        },
        "game.port": {
          "type": "number",
          "default": 4203,
          "description": "The Port for your RhostMUSH game."
        }
      }
    },
    "keybindings": [
      {
        "command": "extension.postSelection",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorTextFocus"
      }
    ],
    "commands": [
      {
        "command": "extension.format",
        "title": "Format MUSHCode"
      },
      {
        "command": "extension.postSelection",
        "title": "Post Formatted Code to Game"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.format",
          "group": "navigation"
        },
        {
          "command": "extension.postSelection",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "mush",
        "aliases": [
          "MUSHCode",
          "mush"
        ],
        "extensions": [
          ".mu",
          ".mush",
          ".mux"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mush",
        "scopeName": "text.mush",
        "path": "./syntaxes/mush.tmLanguage.json"
      }
    ]
  },
  "dependencies": {
    "@digibear/mush-format": "^1.1.3",
    "axios": "^0.27.2"
  }
}
